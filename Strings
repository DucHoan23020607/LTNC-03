#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
  string s1;
  string s2;
  cin >> s1 >> s2;
  cout << s1.length() << " " << s2.length()<<endl;
  string s3 = s1 + s2;
  cout << s3 << endl;
  char a = s1[0];
  s1[0] = s2[0];
  s2[0] = a;
  cout << s1 << " " << s2;
    return 0;
}
